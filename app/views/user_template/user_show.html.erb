<%photos = @matching_user.own_photos%>

<h2>Own photos (<%=photos.length()%>)</h2>

<table border = "1">
<tbody>
  <tr>
    <th>
      Image
    </th>
    <th>
      Owner
    </th>
    <th>
      Caption
    </th>
    <th>
      Posted
    </th>
    <th>
    </th>
  </tr>
  <%photos.each do |photo|%>
    <tr>
      <td>
        <img src = "<%=photo.image%>">
      </td>
      <td>
        <%=photo.poster.username%>
      </td>
      <td>
        <%=photo.caption%>
      </td>
      <td>
        <%=photo.created_at%>
      </td>
      <td>
        <a href = "/">Show details</a>
      </td>
    </tr>
  <%end%>
</tbody>
</table>
